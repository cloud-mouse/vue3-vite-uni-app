{
  "compilerOptions": {
    "target": "esnext",
    "useDefineForClassFields": true,
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "lib": [
      "esnext",
      "dom"
    ],
    "types": [
      "@dcloudio/types"
    ],
    "noImplicitAny": false,
    "allowJs": true, //编译时允许有js
    "allowSyntheticDefaultImports": true, //允许引用没有默认导出的模块
    "paths": {
      "@/*": [
        "./src/*"
      ]
    }
  },
  "include": [
    "./src/*.vue",
    "./src/**/*.vue",
    "./src/**/*.js",
    "./src/*.nvue",
    "./src/**/*.nvue",
    "./src/*.ts",
    "./src/*.d.ts",
    "./src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "./src/components/wlyyui/*",
  ]
}